<!DOCTYPE html>
<html>
<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link href = "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" href="../music.css">
	<link rel="stylesheet" href="../style.css">
</head>

<header>
	<div>
		<a href="/signup"><button type="button" id="signupBtn" class="navBtn btn btn-outline-secondary btn-sm">Sign Up</button></a>
		<a href="/login"><button type="button" id="loginBtn" class="navBtn btn btn-outline-secondary btn-sm">Login</button></a>
	</div>
</header>

<body>
	<div id="player">
		<div id="details">
			<div><h5 id="songName">song name</h5></div>
			<div><h6 id="songArtist">song artist</h6></div>	
		</div>
		<div id="buttons">
			<div id="prev">
				<button class="musicBtn" onclick="prevSong()">
					<i class="fa-solid fa-backward-step"></i>
				</button>
			</div>
			<div id="play">
				<button class="musicBtn" id="playpause" onclick="playpause()">
					<i class="fa-solid fa-play"></i>
				</button>
			</div>
			<div id="next">
				<button class="musicBtn" onclick="nextSong()">
					<i class="fa-solid fa-forward-step"></i>
				</button>
			</div>
		</div>
		<div id="info">		
			<div id="duration">00:00</div>
			<input type="range" id="slider" value="0" min="1" max="100" onchange="seek()">
			<div id="totalDuration">00:00</div>
		</div>
	</div>

	<h1> Landing Page </h1>
	<% if (session_data) { %>
		<p><%= session_data %></p>
	<% }%>

	<script src="../js/music.js"></script>
</body>
</html>